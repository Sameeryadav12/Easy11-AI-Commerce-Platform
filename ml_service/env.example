# Easy11 ML Service Environment Variables

# Application
ENVIRONMENT=development
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/easy11_dev

# MLflow
MLFLOW_TRACKING_URI=file:///mlflow
MLFLOW_EXPERIMENT_NAME=easy11-recommendations

# Model Storage
MODEL_REGISTRY_PATH=/mlflow/models

# API
API_HOST=0.0.0.0
API_PORT=8000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Backend API
BACKEND_API_URL=http://localhost:5000/api/v1

# Redis (optional caching)
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_PROMETHEUS=true

